<h1>Edit course {{course.title}}</h1>

<form action='/courses/edit' method='POST'>
    <div class='input-field'>
        <input
            id='title'
            name='title'
            type='text'
            class='validate'
            value='{{course.title}}'
            required
        />
        <label for='title'>Title</label>
        <span class='helper-text' data-error='Enter title'></span>
    </div>
    <div class='input-field'>
        <input
            id='price'
            name='price'
            type='number'
            class='validate'
            min='1'
            value='{{course.price}}'
            required
        />
        <label for='price'>Price</label>
        <span class='helper-text' data-error='Enter price'></span>
    </div>
    <div class='input-field'>
        <input
            id='img'
            name='img'
            type='text'
            class='validate'
            value='{{course.img}}'
            required
        />
        <label for='img'>Image URL</label>
        <span class='helper-text' data-error='Enter URL'></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button type='submit' class='btn btn-primary'>Edit course</button>
</form>
